<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name='keywords' content="<%= @seo_keywords %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
     <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/le-frog/jquery-ui.min.css' %>
  </head>

  <body class="text-center">
    <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
    <%= video_tag(
      "HardDrivePhotojpeg.mp4",
      id: 'background',
      autoplay: true,
      loop: true,
      muted: true,
      poster: 'home.jpg'
    )%>
      <%= render "shared/nav", location:'top' %>
      <main role="main" class="inner cover">
        <%= yield %>
      </main>
      <%= render "shared/application_footer" %>
      <%= source_helper("application") %>
    </div>
  </body>
</html>
